<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="xfResource.Views.MainPage"
             Title="MainPage">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="{Binding Title}" />
        <Label Text="帳號" 
             TextColor="{StaticResource 輸入文字標題顏色}"
             FontSize="{TemplateBinding 輸入文字標題大小}" />
        <Label Text="密碼" 
             TextColor="{StaticResource 輸入文字標題顏色}"
             FontSize="{TemplateBinding 輸入文字標題大小}" />
        <StackLayout
            Orientation="Horizontal">
            <Button Text="取消" BackgroundColor="{StaticResource 取消按鈕顏色}"></Button>
            <Button Text="登入" BackgroundColor="{StaticResource 確定按鈕顏色}"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>